{
  "manifest_version": 3,
  "name": "Semantic Find",
  "version": "1.0.0",
  "description": "Smarter Ctrl+F: search by meaning using embeddings",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["<all_urls>", "https://api.openai.com/*"],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/extract.js", "content/embedding.js", "content/score.js", "content/highlight.js", "content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options/options.html"
}
